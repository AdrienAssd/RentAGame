<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Mot de passe oublié</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-pink-50 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded shadow-md w-full max-w-sm">
      <div class="flex justify-center mb-6">
        <img src="/logo.svg" alt="Logo" class="h-10" />
      </div>
      <form>
        <h2 class="text-lg font-semibold mb-4 text-center">Réinitialiser le mot de passe</h2>
        <div class="mb-4">
          <label for="email" class="block text-sm font-medium mb-1">Email</label>
          <input id="email" type="email" placeholder="Email" class="w-full border rounded px-3 py-2" />
        </div>
        <button type="submit" class="w-full bg-black text-white py-2 rounded hover:bg-gray-800 transition">
          Envoyer un lien de réinitialisation
        </button>
        <div class="mt-4 text-center">
          <a href="/login" class="text-sm text-black hover:underline">Retour à la connexion</a>
        </div>
      </form>
    </div>
  </body>
</html>
